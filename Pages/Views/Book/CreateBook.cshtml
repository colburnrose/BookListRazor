@page
@model BookListRazor.Pages.Views.Book.CreateBookModel
@{
    ViewData["Title"] = "CreateBook";
}
<br/>

<div class="container">

    <div class="col-lg-12">
        <h1>Create New Book</h1>
        <form method="post" class="table-bordered" style="padding-left: 30px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div><br/><br/>
            <div class="row">
                <div class="form-group col-sm-3">
                    <label asp-for="Book.Name"></label>
                </div>

                <div class="form-group col-sm-4">
                    <input asp-for="Book.Name" class="form-control"/>
                    <span asp-validation-for="Book.Name"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-sm-3">
                    <label asp-for="Book.Isbn"></label>
                </div>

                <div class="form-group col-sm-4">
                    <input asp-for="Book.Isbn" class="form-control"/>
                    <span asp-validation-for="Book.Isbn"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-sm-3">
                    <label asp-for="Book.Author"></label>
                </div>

                <div class="form-group col-sm-4">
                    <input asp-for="Book.Author" class="form-control"/>
                    <span asp-validation-for="Book.Author"></span>
                </div>
            </div>

            <div class="ibox-footer">
                <div class="form-group">
                    <button id="btnCreate" type="submit" class="btn  btn-success">Create</button>
                    <div class="col-sm-2">
                        <a asp-page="Index" class="btn btn-danger form-control">Back to List</a>
                    </div>
                    
                </div>
            </div>
            <br/>
        </form>
    </div>

</div>
